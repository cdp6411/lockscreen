<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/iv_simInfo1"
            android:visibility="visible"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/small_margin"/>
        <ImageView
            android:id="@+id/iv_wifiInfo"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_batteryInfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/downView"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/weather_layout"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView android:id="@+id/weather_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:textSize="30dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/temp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="N/A"/>
            </LinearLayout>
            <TextView
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_gravity="end"
                android:id="@+id/weather_locatin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:visibility="invisible"
                android:drawableLeft="@drawable/weather_loc"
                android:drawablePadding="3dp"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:layout_gravity="end"
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/weather_layout1"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_alignParentRight="true">
        <LinearLayout
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/weather_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30dp"/>
            <TextView
                android:textSize="30dp"
                android:textColor="@android:color/white"
                android:id="@+id/current_temperature_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp" />
        </LinearLayout>
            <TextView
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:layout_gravity="end"
                android:id="@+id/city_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:textSize="13sp"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:layout_gravity="end"
                android:id="@+id/updated_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <com.baoyz.swipemenulistview.SwipeMenuListView
            android:id="@+id/lv_notifications"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="150dp"
            android:divider="@android:color/white"
            android:dividerHeight="0.2dp"
            android:layout_below="@+id/weather_layout"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="100sp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="90dp"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="65dp"
            android:layout_alignParentBottom="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/img_misscall"
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/missed_call"/>
            <TextView
                android:textColor="#ffffffff"
                android:id="@+id/txt_misscall_count"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:layout_toRightOf="@+id/img_misscall"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/img_msg"
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/massage"
                android:layout_toRightOf="@+id/txt_misscall_count"
                android:layout_centerVertical="true"/>
            <TextView
                android:textColor="#ffffffff"
                android:id="@+id/txt_msg_count"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:layout_toRightOf="@+id/img_msg"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/fix_fan"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear_fan"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/fan_rotate"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear_fan_blurry"
            android:layout_centerInParent="true"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/black"
            android:id="@+id/fan_value"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60%"
            android:layout_centerInParent="true"/>
        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/task_clear_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/content"
            android:background="#dd171717"
            android:padding="@dimen/medium_margin"
            android:visibility="gone"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="left"
                    android:id="@+id/tv_airplane"
                    android:background="@color/transparentWhite"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Airplane"
                    android:drawableTop="@drawable/plane"
                    android:drawablePadding="@dimen/normal_margin"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_wifi"
                    android:background="@color/transparentWhite"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:text="Wifi"
                    android:drawableTop="@drawable/wifi"
                    android:drawablePadding="@dimen/normal_margin"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_bluetooth"
                    android:background="@color/transparentWhite"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:text="Bluetooth"
                    android:drawableTop="@drawable/bluetooth"
                    android:drawablePadding="@dimen/normal_margin"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:weightSum="3">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="left"
                    android:id="@+id/tv_flash"
                    android:background="@color/transparentWhite"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Flash"
                    android:drawableTop="@drawable/flash"
                    android:drawablePadding="@dimen/normal_margin"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_brightness"
                    android:background="@color/transparentWhite"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:text="Brightness"
                    android:drawableTop="@drawable/brightness"
                    android:drawablePadding="@dimen/normal_margin"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_data"
                    android:background="@color/transparentWhite"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:text="Data"
                    android:drawableTop="@drawable/data"
                    android:drawablePadding="@dimen/normal_margin"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:weightSum="3">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="left"
                    android:id="@+id/tv_rotate"
                    android:background="@color/transparentWhite"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rotate"
                    android:drawableTop="@drawable/rotate"
                    android:drawablePadding="@dimen/normal_margin"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_killTask"
                    android:background="@color/transparentWhite"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:text="Kill Task"
                    android:drawableTop="@drawable/kill_task"
                    android:drawablePadding="@dimen/normal_margin"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_location"
                    android:background="@color/transparentWhite"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:text="Location"
                    android:drawableTop="@drawable/location"
                    android:drawablePadding="@dimen/normal_margin"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/downView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_passcode"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:textSize="20sp"
        android:visibility="gone"
        android:id="@+id/show_location"
        />
</RelativeLayout>
